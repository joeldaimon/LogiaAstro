<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mision.VelasActivity">

    <LinearLayout android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout android:id="@+id/velaRoja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_fire"
                app:tint="@color/red" />
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:backgroundTint="@color/red"
                app:cardCornerRadius="10dp"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/velaAmarilla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_fire"
                app:tint="@color/red" />
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:backgroundTint="@color/yellow"
                app:cardCornerRadius="10dp"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/velaAzul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_fire"
                app:tint="@color/red" />
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:backgroundTint="@color/pastel_blue"
                app:cardCornerRadius="10dp"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/velaFucsia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_fire"
                app:tint="@color/red" />
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:backgroundTint="@color/pink"
                app:cardCornerRadius="10dp"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/velaVerde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_fire"
                app:tint="@color/red" />
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:backgroundTint="@color/pastel_green"
                app:cardCornerRadius="10dp"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/velaRosa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_fire"
                app:tint="@color/red" />
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:backgroundTint="@color/rosa_palo"
                app:cardCornerRadius="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/llTop">
        <LinearLayout android:id="@+id/velaMorada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_fire"
                app:tint="@color/red" />
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:backgroundTint="@color/violet"
                app:cardCornerRadius="10dp"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/velaNegra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_fire"
                app:tint="@color/red" />
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:backgroundTint="@color/bg_header"
                app:cardCornerRadius="10dp"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/velaBlanca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_fire"
                app:tint="@color/red" />
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:backgroundTint="@color/subtitle_color"
                app:cardCornerRadius="10dp"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/velaMarron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_fire"
                app:tint="@color/red" />
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:backgroundTint="@color/brown"
                app:cardCornerRadius="10dp"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/velaMarino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_fire"
                app:tint="@color/red" />
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:backgroundTint="@color/blue"
                app:cardCornerRadius="10dp"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/velaNaranja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_fire"
                app:tint="@color/red" />
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:backgroundTint="@color/orange"
                app:cardCornerRadius="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/llBottom"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="¿Qué vela es para hacer rituales de..."/>
    <Button android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/red"
        android:enabled="false"
        android:text="@string/minijuego_next"/>
    <TextView android:id="@+id/tvVela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnNext"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="44dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="AMOR?"/>
</androidx.constraintlayout.widget.ConstraintLayout>