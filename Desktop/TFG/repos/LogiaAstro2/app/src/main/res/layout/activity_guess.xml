<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mision.GuessActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGuess"
        android:layout_width="150dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="5dp"
        app:iconGravity="textTop"
        app:iconTint="@color/rosa_palo"
        app:iconSize="44dp"
        android:backgroundTint="@color/rosa_palo" />
    <TextView android:id="@+id/tvRespuesta"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnGuess"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:textSize="33dp"
        tools:text="SI"/>
    <Button android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvRespuesta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/red"
        android:enabled="false"
        android:text="@string/minijuego_next"/>

    <LinearLayout android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/btnGuess"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWater"
            android:layout_width="90dp"
            android:layout_height="170dp"
            android:layout_margin="5dp"
            app:iconGravity="textTop"
            app:iconSize="44dp"
            app:icon="@drawable/icon_water"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFire"
            android:layout_width="90dp"
            android:layout_height="170dp"
            android:layout_margin="5dp"
            app:iconGravity="textTop"
            app:iconSize="44dp"
            android:backgroundTint="@color/violet"
            app:icon="@drawable/icon_fire"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEye"
            android:layout_width="90dp"
            android:layout_height="170dp"
            android:layout_margin="5dp"
            app:iconGravity="textTop"
            app:iconSize="44dp"
            android:backgroundTint="@color/beige"
            app:icon="@drawable/icon_eye"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHeart"
            android:layout_width="90dp"
            android:layout_height="170dp"
            android:layout_margin="5dp"
            app:iconGravity="textTop"
            app:iconSize="44dp"
            android:backgroundTint="@color/light_green"
            app:icon="@drawable/icon_heart"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>